class CustomersController < ApplicationController
  def index
    @customers = Customer.all
  end
  def new
    @customer=Customer.new
  end
  def create
    @customer=Customer.new(customer_params)
    #@customers_profiles=@customer.customers_profiles.create(cus_params)
      if @customer.save
        flash[:notice]= " successfully created with."

        redirect_to @customer

      else
        flash[:notice]='account not created please try again'
         render :new

      end
  end

  def show
    @customer=Customer.find(params[:id])
  end

  def list
    @customers=Customer.all
  end


  private
    def customer_params
      params.require(:customer).permit(:fname,:lname,:email,:username,:password,:password_confirmation,:dob,:gender,:mobile,                customers_profiles_attributes: [ :fname,:lname,:email,:dob,:gender,:mobile])


    end
=begin  
private
  def cus_params
    params.require(:customers_profile).permit(:fname,:lname,:email,:dob,:gender,:mobile)
  end
=end
end

<%= form_for @customer do |f| %>
    <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>



<table style="border: 1px solid #2E2F30" cellpadding="5" cellspacing="8">

  <%= f.fields_for :customers_profile  do |s| %>
      <%= s.hidden_field :customer_id, :value => @customer.id %>
      <tr>
        <td><%= s.label :fname, "FIRST NAME" %></td>
        <td><%= s.text_field :fname %></td>
        <td><%= s.label :lname, 'LAST NAME' %></td>
        <td><%= s.text_field :lname,size: "24x600" %></td>
      </tr>
      <tr>
        <td><%= s.label :email, 'Email' %></td>
        <td><%= s.email_field :email%></td>
      </tr>
              <tr>
                 <td><%= f.label :username, 'USER NAME' %></td>
                   <td><%= f.text_field :username %></td>
              </tr>
              <tr>
                  <td><%= f.label :password, "PASSWORD" %></td>
                   <td><%= f.password_field :password %></td>
              </tr>
              <tr>
                   <td><%= f.label :password_confirmation, "CONFORM PASSWORD" %></td>
                   <td><%= f.password_field :password_confirmation %></td>
              </tr>

      <tr>
        <td><%=s.label :dob, "DATE OF BIRTH" %></td>
        <td><%=s.date_field :dob%></td>
      </tr>
      <tr>
        <td><%=s.label :gender, 'GENDER: '%></td>
        <td><%=s.label :gender, 'MALE'%>
          <%=s.radio_button :gender, 'MALE'%>
          <%=s.label :gender, 'FEMALE'%>
          <%=s.radio_button :gender, 'FEMALE'%></td>
      </tr>
      <tr>
        <td><%= s.label :mobile, 'MOBILE NUMBER' %></td>
        <td><%= s.phone_field :mobile %></td>
      </tr>
  <% end %>


              <tr>
                <td></td>
                 <td><%= f.submit 'Submit' %></td>
              </tr>
</table>
<% end %>



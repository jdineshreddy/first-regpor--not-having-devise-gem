<div id="customers_profile_state_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
      <em>Please select a country above</em>
  <% elsif country.subregions? %>
      <%= subregion_select(:customers_profile, :state, parent_region) %>
  <% else %>
      <%= text_field(:customers_profile, :state) %>
  <% end %>
</div>



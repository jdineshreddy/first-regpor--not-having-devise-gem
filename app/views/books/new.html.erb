<%= link_to image_tag("h.jpg",  size: "60x60" ), logins_show_path  %><br>
<%= form_for(@book)  do |f| %>

    <%= f.label :name, "Name" %>
    <%= f.text_field :name %><br>

    <%= f.fields_for :author do |a|  %>
        <%= a.hidden_field :book_id, :value => @book.id %>
        <%= a.label :name, "Author name" %>
        <%= a.text_field :name %><br>
    <% end %>

    <%= f.label :published_by, "Published by" %>
    <%= f.text_field :published_by %><br>
    <%= f.label :price, "Price" %>
    <%= f.text_field :price%><br>

    <%= f.fields_for :image do |i| %>
        <%= i.hidden_field :book_id, :value => @book.id %>
        <%= i.label :img, "Image"  %>
        <%= i.file_field :img %><br>
    <% end %>


    <%= f.submit %>
<%end%>
